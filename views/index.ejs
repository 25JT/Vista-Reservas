<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Vista Go!</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-DQvkBjpPgn7RC31MCQoOeC9TI2kdqa4+BSgNMNj8v77fdC77Kj5zpWFTJaaAoMbC" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="icon" type="image/png" href="/Imagenes/faviicon/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/Imagenes/faviicon/favicon.svg" />
  <link rel="shortcut icon" href="/Imagenes/faviicon/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/Imagenes/faviicon/apple-touch-icon.png" />
  <link rel="manifest" href="/Imagenes/faviicon/site.webmanifest" />
</head>

<body>

  <nav class="text-center navbar">
    <h1 id="title"> Vista</h1>
  </nav>

  <section>
    <div id="listaReservas"></div>
  </section>

  <br>

  <section style="margin: 0px 0px 40px 0px;">
    <div class="container">
      <form id="formReserva" class="p-4 shadow rounded contform">
        <input type="hidden" id="idReserva">

        <div class="row g-3">
          <div class="col-md-6">
            <label for="nombre" class="form-label">Nombre:</label>
            <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Ingrese su nombre" required>
          </div>
          <div class="col-md-6">
            <label for="personas" class="form-label">Número de personas:</label>
            <input type="number" class="form-control" name="personas" id="personas" min="1" placeholder="Ej. 2"
              required>
          </div>
        </div>

        <div class="row g-3 mt-2">
          <div class="col-md-6">
            <label for="fecha" class="form-label">Fecha:</label>
            <input type="date" class="form-control" name="fecha" id="fecha" required>
          </div>
          <div class="col-md-6">
            <label for="telefono" class="form-label">Teléfono:</label>
            <input type="tel" class="form-control" name="telefono" id="telefono" pattern="[0-9]{10}"
              title="Ingrese un número válido de 10 dígitos" placeholder="Ej. 3001234567" required>
          </div>

          <div class="col-md-6">
            <label for="hora" class="form-label">Hora:</label>
            <select class="form-control" name="hora" id="hora" required>
              <option value="">Seleccione una hora</option>
              <option value="17:00">5:00 PM</option>
              <option value="18:00">6:00 PM</option>
              <option value="19:00">7:00 PM</option>
              <option value="20:00">8:00 PM</option>
              <option value="21:00">9:00 PM</option>
              <option value="22:00">10:00 PM</option>
              <option value="23:00">11:00 PM</option>
            </select>
          </div>
          <div class="col-md-6">
            <label for="mesa" class="form-label">Número de mesa:</label>
            <input type="number" class="form-control" name="mesa" id="mesa" min="1" required
              placeholder="Solo disponemos de 8 mesas">
          </div>
        </div>
        <br>
        <div class=" d-flex align-items-end">
          <button type="submit" id="enviar" class="btn btn-success w-100">Enviar</button>
          <button type="button" id="actualizar" class="btn btn-warning w-100 ms-2"
            style="display:none;">Actualizar</button>
        </div>
      </form>
    </div>
  </section>


  <script src="/main.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YUe2LzesAfftltw+PEaao2tjU/QATaW/rOitAq67e0CT0Zi2VVRL0oC4+gAaeBKu"
    crossorigin="anonymous"></script>
</body>

</html>